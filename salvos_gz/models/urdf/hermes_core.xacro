        <mass value="0.1265424"/>
        <inertia
          ixx="0.1185"  ixy="0.0"      ixz="0.0"
          iyy="0.1170"  iyz="0.009964"
          izz="0.001558"/>
      </inertial>
    </link>

    <joint name="fl_rotor_joint" type="continuous">
      <parent link="frame"/>
      <child link="fl_rotor"/>
      <origin xyz="0.5 0.81 0.81" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit effort="10" velocity="10000"/>
      <dynamics damping="0.002" friction="0.0005"/>
    </joint>


    <!-- Front-right rotor -->
    <link name="fr_rotor">
