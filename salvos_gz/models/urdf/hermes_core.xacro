      <axis xyz="1 0 0"/>
      <limit effort="10" velocity="10000"/>
      <dynamics damping="0.002" friction="0.0005"/>
    </joint>

    <!-- Rear-left rotor -->
    <link name="rl_rotor">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <cylinder radius="0.05" length="1.2"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <origin rpy="0.0 0 0" xyz="0 0 0"/>
        <geometry>
          <cylinder radius="0.05" length="1.2"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1265424"/>
        <inertia
          ixx="0.1185"  ixy="0.0"      ixz="0.0"
          iyy="0.1170"  iyz="0.009964"
          izz="0.001558"/>
      </inertial>
    </link>

    <joint name="rl_rotor_joint" type="continuous">
      <parent link="frame"/>
      <child link="rl_rotor"/>
      <origin xyz="0.5 -0.93 -0.93" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit effort="10" velocity="10000"/>
      <dynamics damping="0.002" friction="0.0005"/>
    </joint>

    <!-- Rear-right rotor -->
    <link name="rr_rotor">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <cylinder radius="0.05" length="1.2"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <origin rpy="0.0 0 0" xyz="0 0 0"/>
        <geometry>
          <cylinder radius="0.05" length="1.2"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1265424"/>
        <inertia
          ixx="0.1185"  ixy="0.0"      ixz="0.0"
          iyy="0.1170"  iyz="0.009964"
          izz="0.001558"/>
      </inertial>
    </link>

    <joint name="rr_rotor_joint" type="continuous">
      <parent link="frame"/>
      <child link="rr_rotor"/>
      <origin xyz="0.5 0.93 -0.93" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit effort="10" velocity="10000"/>
      <dynamics damping="0.002" friction="0.0005"/>
    </joint>

  </xacro:macro>

</robot>
