<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="hermes_core" params="mesh_base">
 
    <!-- Materials -->
    <material name="blue">
      <color rgba="0 0 0.8 1"/>
    </material>
    <material name="black">
      <color rgba="0 0 0 1"/>
    </material>
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
    <material name="grey">
      <color rgba="0.8 0.8 0.8 1"/>
    </material>

    <!-- Base link -->
    <link name="base_link"/>

    <joint name="dummy_joint" type="fixed">
      <parent link="base_link"/>
      <child link="frame"/>
      <origin xyz="0 0 0.8" rpy="0 -1.571 0"/>
    </joint>

    <!-- Frame -->
    <link name="frame">
      <visual>
        <origin rpy="0.0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="${mesh_base}/hermes_mesh_scaled.stl"/>
        </geometry>
        <material name="grey"/>
      </visual>
      <collision>
        <origin rpy="0.0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="${mesh_base}/hermes_mesh_scaled.stl"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="2.637"/>
        <inertia
          ixx="47.090" ixy="0.0" ixz="0.0"
          iyy="87.969" iyz="0.0"
          izz="118.937"/>
      </inertial>
    </link>



    <!-- Nose rotor -->
    <link name="nose_rotor">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <cylinder radius="0.05" length="1.2"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <origin rpy="0.0 0 0" xyz="0 0 0"/>
        <geometry>
          <cylinder radius="0.05" length="1.2"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1265424"/>
        <inertia
          ixx="0.1185"  ixy="0.0"      ixz="0.0"
          iyy="0.1170"  iyz="0.009964"
          izz="0.001558"/>
      </inertial>
    </link>

    <joint name="nose_rotor_joint" type="continuous">
      <parent link="frame"/>
      <child link="nose_rotor"/>
      <origin xyz="1 0 0" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit effort="10" velocity="10000"/>
      <dynamics damping="0.002" friction="0.0005"/>
    </joint>

    <!--
    <joint name="nose_rotor_joint" type="continuous">
      <parent link="frame"/>
      <child link="nose_rotor"/>
      <origin xyz="1 0 0" rpy="0 1.571 3.14159"/>
      <axis xyz="0 0 1"/>
      <limit lower="0" upper="0" effort="10" velocity="600"/>
      <dynamics damping="0.002" friction="0.0005"/>
    </joint>
    -->

    <!-- Front-left rotor -->
    <link name="fl_rotor">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <cylinder radius="0.05" length="1.2"/>
        </geometry>
